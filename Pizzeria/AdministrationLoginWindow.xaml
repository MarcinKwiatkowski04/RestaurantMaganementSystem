<Window x:Class="Pizzeria.AdministrationLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzeria"
        mc:Ignorable="d"
        Title="Logowanie" Height="350" Width="200"
        WindowState="Maximized"
    WindowStyle="None">
    <Grid Background="#FFFF4616">
        <TextBox x:Name="passwordTxtbox" HorizontalAlignment="Center" Height="30" Margin="5,100,5,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" BorderThickness="1,1,1,1" BorderBrush="Black" FontFamily="Wingdings" />
        <Label Content="WPROWADŹ HASŁO: " HorizontalAlignment="Center" Margin="5,50,5,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" BorderBrush="Black" Width="180" Height="30" Background="White"  />
        <Button Content="Zaloguj" HorizontalAlignment="Center" Margin="50,200,50,0" VerticalAlignment="Top" Width="75" Click="Button_Click" FontFamily="Verdana" Background="#FFFFFDFD"/>
        <Button Content="Wróć" HorizontalAlignment="Center" Margin="50,230,50,0" VerticalAlignment="Top" Width="75" FontFamily="Verdana" Background="White" Click="Button_Click_1"/>

    </Grid>
</Window>
